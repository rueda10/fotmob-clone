{
  "name": "fotmob-clone",
  "version": "1.0.0",
  "description": "FotMob clone for dev practice",
  "main": "index.jsx",
  "scripts": {
    "build": "yarn clean; webpack --config config/webpack-prod-config.js",
    "clean": "rm -rf build/*",
    "check-staged": "lint-staged",
    "lint": "eslint src -c .eslintrc.json --ext js,jsx",
    "sass-lint": "sass-lint -vq src/**/*.scss",
    "start:dev": "node config/webpack-dev-server.js",
    "start:prod": "yarn build; serve build"
  },
  "author": "Jaime Rueda",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^5.1.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "node-sass": "^7.0.0",
    "path": "^0.12.7",
    "prettier": "^1.19.1",
    "sass-lint": "^1.13.1",
    "sass-loader": "^8.0.2",
    "serve": "^11.3.0",
    "style-loader": "^1.1.3",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.41.6",
    "webpack-command": "^0.5.0",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-burger-menu": "^2.6.13",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.19",
    "react-icons": "^3.9.0",
    "react-router-dom": "^5.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --list-different"
    ],
    "src/**/*.scss": [
      "sass-lint -vq"
    ]
  }
}
